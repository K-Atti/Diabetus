<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/text_main_cal"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Calorie"
            app:layout_constraintEnd_toStartOf="@+id/et_main_cal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/et_main_cal"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DefaultDecimal"
            app:layout_constraintEnd_toStartOf="@+id/text_main_carb"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_main_cal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_main_carb"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carb"
            app:layout_constraintEnd_toStartOf="@+id/et_main_carb"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_main_cal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/et_main_carb"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carb"
            app:layout_constraintEnd_toStartOf="@+id/text_main_prot"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_main_carb"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_main_prot"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protein"
            app:layout_constraintEnd_toStartOf="@+id/et_main_prot"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_main_carb"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/et_main_prot"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DefaultDecimal"
            app:layout_constraintEnd_toStartOf="@+id/text_main_fat"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_main_prot"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_main_fat"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fat"
            app:layout_constraintEnd_toStartOf="@+id/et_main_fat"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_main_prot"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/et_main_fat"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DefaultDecimal"
            app:layout_constraintEnd_toStartOf="@+id/text_main_fiber"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_main_fat"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_main_fiber"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fiber"
            app:layout_constraintEnd_toStartOf="@+id/et_main_fiber"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_main_fat"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/et_main_fiber"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DefaultDecimal"
            app:layout_constraintEnd_toStartOf="@+id/text_main_cal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_main_fiber"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_Diary"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/diary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_Food"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_Food"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_Diary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/purple_200"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_main"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>